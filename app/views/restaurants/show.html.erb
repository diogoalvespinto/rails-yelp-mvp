<div class="container">
  <h5>
    name:
  </h5>
    <%= @restaurant.name %><br><br>
  <h5>
    address:
  </h5>
    <%= @restaurant.address %><br><br>
  <h5>
    category:
  </h5>
    <%= @restaurant.category %><br><br>
  <h5>
    phone number:
  </h5>
    <%= @restaurant.phone_number %><br><br>
 <h5>
    reviews:
  </h5>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>, <%= review.rating %> stars</li><br>
  <% end %>
</ul>


<br><br>
  <%= link_to "Back to restaurants", restaurants_path, :class => "btn btn-primary" %>
  <br><br>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), :class => "btn btn-primary" %>
</div>
